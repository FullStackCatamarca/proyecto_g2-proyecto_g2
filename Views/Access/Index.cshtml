                <br />
                <br />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <label></label><br />
                        <input type="submit" class="btn btn-info" value="Iniciar Sesión" />
                    </div>
                </div>
            </div>
        </form>
    </div>
